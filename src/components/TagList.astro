---
export interface Props {
  tags: string[];
}

const { tags} = Astro.props;
---

<div class={`tags-classic`}>
  {tags.map(tag => (
    <a 
      href={`/tags/${tag.toLowerCase().replace(/\s+/g, '-')}/`}
      class="tag"
      aria-label={`View all posts tagged with ${tag}`}
    >
      {tag}
    </a>
  ))}
</div>